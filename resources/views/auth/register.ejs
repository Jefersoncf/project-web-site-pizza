<section class="login flex items-center justify-center min-h-screen bg-gray-100">
    <div class="px-8 py-6 mt-4 text-left bg-white shadow-lg">
        <h3 class="text-2xl font-bold text-center">Registre-se</h3>

        <form action="/register" method="post" class="mt-4">
            <% if(messages.error) { %> 
            <span class="text-red-500 text-sm"><%= messages.error %></span>
            <% } %> 
                <div>
                    <label class="block" for="name">Nome<label>
                            <input type="text" name="name" placeholder="Insira seu nome"
                                class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600">
                </div>
                <div>
                  <label class="block" for="email">Email<label>
                          <input type="email" name="email" placeholder="Insira seu Email"
                              class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600">
              </div>
                <div class="mt-4">
                    <label class="block">Senha<label>
                            <input type="password" name="password" placeholder="Crie uma Senha"
                                class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600">
                </div>
                <div class="flex items-baseline justify-between">
                    <button type="submit" class="px-6 py-2 mt-4 text-white rounded-md btn-primary ">Registrar</button>
                    <a href="/login" class="text-sm hover:underline">JÃ¡ tem conta?</a>
                </div>
        </form>
        <!-- <p class="text-center text-gray-500 text-xs py-2">&copy; 2022 Todos direitos reservados.</p> -->
      </div>
</section>